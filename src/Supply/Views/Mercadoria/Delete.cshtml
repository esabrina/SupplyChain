@model Supply.Models.Mercadoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Mercadoria</h1>

<h3>Tem certeza que deseja remover esse registro?</h3>
<strong>As movimentações da mercadoria também serão excluídas.</strong>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fabricante)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-sm-2"><a asp-action="Index" class="alinha_texto "><< Voltar</a></div>
            <div class="col-sm-10"><input type="submit" value="Excluir" class="btn btn-danger" /></div>
        </div>       
    </form>
</div>
